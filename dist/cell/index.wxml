<view bindtap="handleTap" class="i-class i-cell {{ isLastCell ? 'i-cell-last' : '' }} {{ isLink ? 'i-cell-access' : '' }}" hover-class="{{ needHover ? 'hover-class' : ''}}">
    <view class="i-cell-bd">

        <view wx:if="{{ title }}" class="i-cell-text">
        
        <!-- <view class="i-cell-icon"> -->
        <slot name="icon" style="margin-right: 5px"></slot>{{ title }}</view>
    <!-- </view> -->
            
        <view wx:if="{{ label }}" class="i-cell-desc">{{ label }}</view>
        <slot></slot>
    </view>
    <view catchtap="navigateTo" class="i-cell-ft" style="color: {{valueColor}}">
        <block wx:if="{{value}}">{{ value }}</block>
        <block wx:else>
            <slot name="footer"></slot>
        </block>
    </view>
</view>