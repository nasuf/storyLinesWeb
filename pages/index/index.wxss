/**index.wxss**/
page, .page, .page__bd{
    /* background-color: #c7500a */
    background-color: #f5f5f5;
    height: 100%;
}

.page__bd{
    padding-bottom: 0;
}

.weui-navbar {
    background-color: #f5f5f5;
    opacity: 0.9
}

.weui-tab__content{
    padding-top: 2%;
    text-align: left;
}

.new {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    flex-direction: column;
    width: 100%;
    height: 98%;
    align-items: center;
    overflow: hidden;
    position: relative;
}

.publish {
    width: 90%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    margin-bottom: 10px;
}

.authorize {
    width: 90%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    margin-bottom: 10px;
}

.textarea {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    width: 90%;
    font-size: 18px;
}

.item {
    margin-left: 2%;
    margin-right: 2%;
    margin-top: 2%;
    /* width: 95%; */
}

.weui-panel__bd {
    background-color: #ececec;
    /* background-color: #000000; */
    border-radius: 10px;
}

.weui-cell_active {
    background-color: #f5f5f5;
}

.text {
    display: -webkit-box !important;
    word-break: normal !important;
    text-overflow: ellipsis !important;
    overflow: hidden !important;
    -webkit-box-orient: vertical !important;
    -webkit-line-clamp: 4 !important;
    line-height: 20px;
}

