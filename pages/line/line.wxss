/**index.wxss**/

page {
    background-color: #f5f5f5;
    -webkit-box-orient: vertical;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    flex-direction: column;
    width: 100%;
    height: 100%;
    align-items: center;
    overflow: hidden;
    position: relative;
    padding-bottom: 0 !important;
}

.scroll-view {
    width: 100%;
    margin-left: 2%;
    margin-right: 2%
}

.item {
    width: 95%;
    margin-bottom: 5px;
}

.weui-panel__bd {
    background-color: #ececec;
    border-radius: 10px;
}

.branch-item {
    background-color: #EEEED1;
    border-radius: 10px;
}

.weui-cell_active {
    background-color: #f5f5f5;
}

.text {
    display: -webkit-box !important;
    word-break: normal !important;
    text-overflow: ellipsis !important;
    overflow: hidden !important;
    -webkit-box-orient: vertical !important;
    line-height: 20px;
    /* color: transparent;
  text-shadow: 0 0 15px #666;
  transition: text-shadow 2s cubic-bezier(0, 1, 0, 1); */
}

.branch-text {
    display: -webkit-box !important;
    word-break: normal !important;
    text-overflow: ellipsis !important;
    overflow: hidden !important;
    -webkit-box-orient: vertical !important;
    -webkit-line-clamp: 2 !important;
    line-height: 20px;
    color: gray;
}

.branch-meta {
    color: gray;
}


.weui-media-box__title {
    border-left: 5px solid #ccc !important;
    padding-left: 8px;
}

.weui-media-box__info {
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
}

.weui-media-box__info__meta {
    font-size: 12px;
}

.has-branch-tag {
    font-size: 10px;
    background-color: black;
    color: white;
    text-align: center;
    padding: 2px;
    border-radius: 2px
}


.container {
    height: 100%;
    padding-top: 0;
    padding-bottom: 0;
    margin: 5px
}

.btn {
    width: 90%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    margin-bottom: 10px;
    font-size: 15px;
}

.publish-btn {
    width: 95%;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin-bottom: 5px !important;
    margin-top: 10px !important;
    color: gray !important;
    font-size: 15px;
    background-color: #EEEED1 !important;
    border-color: #EEEED1 !important;
    font-weight: bolder;
}

